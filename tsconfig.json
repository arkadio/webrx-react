{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitUseStrict": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "include": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts"
  ],
  "exclude": [
    "src/typings/**/*"
  ]
}
